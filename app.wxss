@import './assets/css/iconfont.wxss';
page{
  font-family:-apple-system,BlinkMacSystemFont,'Helvetica Neue',Helvetica,Segoe UI,Arial,Roboto,'PingFang SC','Hiragino Sans GB','Microsoft Yahei',sans-serif;
  --tabs-default-color:#ee1e0b;
  --tabs-bottom-bar-color:#ee1e0b;
  --button-primary-background-color:#ee1e0b;
  --button-primary-border-color:#ee1e0b;
}
.color{color:#ee1e0b !important}
.bgcolor{background-color:#ee1e0b !important}
.bgcolorthin{background-color:#e0a9ad !important}
.bdcolor{border-color:#ee1e0b !important}
.container{padding:15px;font-size:14px !important}
.failed{display:flex;flex-direction:column;align-items:center;justify-content:center;height:100vh;background-color:#fff}
.failed .op{text-align:center}
.failed .warning{font-size:50px;margin-bottom:20px;color:#faa651}
.failed .tips{font-size:14px;color:#7d7e80;margin:0 50px 10px 50px}
.failed .btn{padding:8px;font-size:12px;border-radius:2px;width:88px;margin:0 auto;color:#fff}
.failed .btn-opensetting{line-height:1;box-sizing:content-box}
.failed .btn-opensetting:after{border:0;width:auto;height:auto;border:0;border-radius:0}
.failed .van-loading--vertical .van-loading__text{margin:10px 30px 0 30px;text-align:center}
.load-more{padding:10px 0;text-align:center;font-size:14px}
.load-more .load-more-failed{cursor:pointer;display:flex;justify-content:center;align-items:center}
.load-more .load-more-failed .iconfont{margin-right:5px}
.load-more .load-more-done .van-divider{color:#bdbdbd;margin:10px 100px}
.load-more .load-more-done .van-divider:after,.load-more .load-more-done .van-divider:before{border-color:#bdbdbd}