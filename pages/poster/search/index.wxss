.search{padding:0 15px 15px 15px}
.search .van-search{padding:0}
.divider{background-color:#f3f4f9;height:20px}
.container{padding:0 !important}
.container .poster{display:flex;flex-direction:row;padding:20rpx;overflow:hidden}
.container .poster .left{width:345rpx}
.container .poster .right{width:345rpx;margin-left:20rpx}
.container .poster .van-image{width:100%;margin:10rpx 0}
.container .poster .van-image .van-image__img{border-radius:10rpx;box-shadow:0px 2px 4px 0px rgba(0,28,88,0.14)}
.history{padding:0 15px}
.history .header{display:flex;justify-content:space-between;border-bottom:1px solid #f7f8fa;padding-bottom:5px}
.history .body{margin-top:10px}
.history .body .van-tag{font-size:12px;margin-right:5px}
.failed{height:calc(100vh - 50px) !important}